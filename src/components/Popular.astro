---
import Card from '../components/Card.astro';

let lists = [];
try {
    const response = await fetch(`${Astro.url.origin}/api/get?t=hot`);
    if (response.ok) {
        const json = await response.json();
        lists = json.data.lists;
    }
} catch (error) {
    //
}
---

<div class="text-2xl font-bold md:col-span-3 sm:col-span-2 mb-2">Most Popular</div>
{lists.map((item: any) => <Card item={item} />)}
<div class="md:col-span-3 sm:col-span-2 h-4 border-b-2 mb-6"></div>